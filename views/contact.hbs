<h2>Contact me</h2>

{{#if isSent}}
  <div class="isSent">The message has been sent! {{file}}</div>
  <img src={{filePath}} alt="Uploaded file" />
{{/if}}

{{#if isError}}
  <div class="isError">You can't leave fields empty!</div>
{{/if}}

<form enctype="multipart/form-data" action="/contact/send-message" method="POST">
  <label>
    Your name: <input type="text" name="author">
  </label>
  <label>
    Your email: <input type="email" name="sender">
  </label>
  <label>
    Title: <input type="text" name="title">
  </label>
  <label>
    Project design: <input name="projectFile" type="file" accept=".png, .jpeg, .jpg, .gif">
  </label>
  <label>
    Message: <textarea name="message"></textarea>
  </label>
  <button type="submit">Send message</button>
</form>